<Application x:Class="PixelSort.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PixelSort.ViewModel"
             xmlns:local2="clr-namespace:PixelSort.View">
    <Application.Resources>
        <DataTemplate DataType="{x:Type local:BasePageViewModel}">
            <local2:BasePage/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:SettingsViewModel}">
            <local2:Settings/>
        </DataTemplate>
    </Application.Resources>
</Application>
