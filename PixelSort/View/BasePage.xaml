    </UserControl.Resources>

    <DockPanel>
        <StackPanel
            Margin="20"
            HorizontalAlignment="Center"
            DockPanel.Dock="Left"
            Orientation="Vertical"
            Visibility="{Binding VerticalPanelVisibility}">

            <Image
                Width="1100"
                Height="350"
                Source="{Binding ImagePath}" />
            <Button
                Name="LoadImageV"
                Width="80px"
                Margin="10px"
                Command="{Binding LoadImageClick}"
                Content="Load Image" />
            <Button
                x:Name="OrientationV"
                Width="80px"
                Margin="10px"
                Command="{Binding SwitchOrientation}"
                Content="Switch" />

            <Image
                Width="1100"
                Height="350"
                Source="{Binding SortedImage, Mode=TwoWay}" />

            <Button
                Name="SaveImageV"
                Width="80px"
                Margin="10px"
                Command="{Binding SaveImage}"
                Content="Save Image"
                IsEnabled="{Binding SaveEnabled}" />
        </StackPanel>

