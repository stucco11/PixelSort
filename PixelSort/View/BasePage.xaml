    </UserControl.Resources>

    <DockPanel>
        <StackPanel VerticalAlignment="Center" DockPanel.Dock="Left">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0">
                    <Image
                        Width="1100"
                        Height="350"
                        Margin="10"
                        VerticalAlignment="Top"
                        Source="{Binding ImagePath}" />
                </StackPanel>
                <Button
                    Grid.Row="1"
                    Width="80px"
                    Margin="10px"
                    VerticalAlignment="Center"
                    Command="{Binding LoadImageClick}"
                    Content="Load Image" />
                <!--
                <Button
                    Width="80px"
                    Margin="10px"
                    Command="{Binding SwitchOrientation}"
                    Content="Switch" />
                -->
                <StackPanel Grid.Row="2">
                    <Image
                        Width="1100"
                        Height="350"
                        Margin="10"
                        VerticalAlignment="Bottom"
                        Source="{Binding SortedImage, Mode=TwoWay}" />
                </StackPanel>
                <StackPanel
                    Grid.Row="3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal">
                    <Button
                        Width="80px"
                        Margin="10px"
                        Command="{Binding SaveImage}"
                        Content="Save Image"
                        IsEnabled="{Binding SaveEnabled}" />
                    <Button
                        Width="130px"
                        Margin="10px"
                        Command="{Binding EditSorted}"
                        Content="Edit Processed Image"
                        IsEnabled="{Binding SaveEnabled}" />
                </StackPanel>


            </Grid>
        </StackPanel>

