        <StackPanel
            Background="#353638"
            DockPanel.Dock="Right"
            Orientation="Vertical">
            <StackPanel
                Margin="10"
                HorizontalAlignment="Center"
                Orientation="Horizontal">

                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="16"
                    Foreground="White"
                    Text="PixelSort" />
            </StackPanel>
            <TextBlock
                Margin="10"
                HorizontalAlignment="Center"
                FontSize="14"
                Foreground="White"
                Text="{Binding PixelDimensions}" />

            <ComboBox
                Name="SortComboBox"
                Width="120"
                Margin="10"
                IsSynchronizedWithCurrentItem="True"
                ItemsSource="{Binding SortingMethods}"
                SelectedItem="{Binding SelectedSort}" />


            <StackPanel MaxWidth="300" Orientation="Vertical">

                <Border Margin="5">
                    <Grid>
                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">

                            <StackPanel Orientation="Vertical">

                                <TextBlock Text="Vertical Partitions" />
                                <local:NumericTextBox Margin="10" Text="{Binding VerticalPartitions, Mode=TwoWay}" />
                            </StackPanel>

                            <StackPanel Orientation="Vertical">

                                <TextBlock Text="Horizontal Partitions" />

                                <local:NumericTextBox Margin="10" Text="{Binding HorizontalPartitions, Mode=TwoWay}" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>

            <StackPanel MaxWidth="300" Visibility="{Binding BrightnessOptions}">
                <Border Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Width="200"
                            Text="Please enter bounds between 0 and 1"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                        <StackPanel
                            Grid.Row="1"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">

                            <StackPanel Orientation="Vertical">

                                <TextBlock Text="Lower Bound" />
                                <local:NumericTextBox Margin="10" Text="{Binding LowerBright, Mode=TwoWay}" />
                            </StackPanel>

                            <StackPanel Orientation="Vertical">

                                <TextBlock Text="Upper Bound" />

                                <local:NumericTextBox Margin="10" Text="{Binding UpperBright, Mode=TwoWay}" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

            </StackPanel>

            <StackPanel MaxWidth="300" Visibility="{Binding RGBOptions}">
                <Border Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Width="200"
                            Text="{Binding ColorText}"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                        <StackPanel
                            Grid.Row="1"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">

                            <Button
                                x:Name="Red"
                                Width="80px"
                                Margin="10px"
                                Command="{Binding RedChecked}"
                                Content="Red" />
                            <Button
                                x:Name="Blue"
                                Width="80px"
                                Margin="10px"
                                Command="{Binding BlueChecked}"
                                Content="Blue" />

                            <Button
                                x:Name="Green"
                                Width="80px"
                                Margin="10px"
                                Command="{Binding GreenChecked}"
                                Content="Green" />
                        </StackPanel>
                    </Grid>
                </Border>

            </StackPanel>

            <StackPanel MaxWidth="300">
                <Border Margin="5"
                        Visibility="Collapsed">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="{Binding RotationText}" />
                        <Slider
                            x:Name="Rotationslider"
                            Grid.Row="1"
                            Width="180"
                            Margin="10"
                            IsMoveToPointEnabled="True"
                            IsSnapToTickEnabled="True"
                            Maximum="90"
                            Minimum="0"
                            TickFrequency="90"
                            Value="{Binding RotationValue}" />
                    </Grid>
                </Border>
                <Border Margin="5">
                    <Grid>
                        <CheckBox IsChecked="{Binding ExtendSort}">
                            <TextBlock Text="Extended Sort? (Sorts the image as if it was one line of pixels)" />
                        </CheckBox>
                    </Grid>
                </Border>
                <Button
                    x:Name="Process"
                    Width="120"
                    Margin="10"
                    VerticalAlignment="Bottom"
                    Command="{Binding ProcessImage}"
                    Content="Begin Processing"
                    IsEnabled="{Binding ProcessEnabled}" />
            </StackPanel>
        </StackPanel>

    </DockPanel>
</UserControl>