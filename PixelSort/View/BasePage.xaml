                Command="{Binding LoadImageClick}"
                Width="80px" />
            </StackPanel>
            <Button 
                x:Name="OrientationH"
                Command="{Binding SwitchOrientation}"
                Width="80px"
                Height="20px"
                Margin="10px"
                Content="Switch" />

            <StackPanel 
                Orientation="Vertical">
            <Image 
                Source="{Binding SortedImage}"
                Height="700"
                Width="500" />

            <Button 
                Name="SaveImageH"
                Margin='10px'
                Content="Save Image"
                Command="{Binding SaveImage}"
                Width="80px" />
            </StackPanel>
        </StackPanel>
        -->
        <StackPanel
            Background="#353638"
            Orientation="Vertical"
            DockPanel.Dock="Right">
            <StackPanel 
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Margin="10">

                <TextBlock 
                    Text="PixelSort"
                    Foreground="White"
                    FontSize="16"
                    HorizontalAlignment="Center" />
            </StackPanel>
            <TextBlock 
                Text="{Binding PixelDimensions}"
                Foreground="White"
                FontSize="14"
                HorizontalAlignment="Center"
                Margin="10" />

            <ComboBox 
                Name="SortComboBox"
                Width="120"
                Margin="10"
                ItemsSource="{Binding SortingMethods}"
                SelectedItem="{Binding SelectedSort}"
                IsSynchronizedWithCurrentItem="True"/>
            <StackPanel
                Visibility="{Binding BrightnessOptions}">
                <TextBlock
                    Text="Please enter bounds between 0 and 1"
                    FontSize="10"
                    Foreground="White"
                    HorizontalAlignment="Center"
                    TextWrapping="Wrap"
                    Width="120"
                    TextAlignment="Center"
                    Margin="10"/>
                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">

                    <StackPanel
                        Orientation="Vertical">

                        <TextBlock
                            Text="Lower Bound"
                            Margin="10"
                            Foreground="White"
                            FontSize="10"/>
                        <TextBox
                            Margin="10"
                            Text="{Binding LowerBright, Mode=TwoWay}"/>
                    </StackPanel>
                
                    <StackPanel
                        Orientation="Vertical">

                        <TextBlock
                            Text="Upper Bound"
                            Margin="10"
                            Foreground="White"
                            FontSize="10"/>

                        <TextBox
                            Margin="10"
                            Text="{Binding UpperBright, Mode=TwoWay}"/>
                    </StackPanel>
                </StackPanel>
                
            </StackPanel>

            <Button 
                x:Name="Process"
                Content="Begin Processing"
                Command="{Binding ProcessImage}"
                Width="120"
                VerticalAlignment="Bottom"  
                IsEnabled="{Binding ProcessEnabled}" />
        </StackPanel>
    </DockPanel>
</UserControl>