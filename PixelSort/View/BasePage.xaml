        <StackPanel
            Background="#353638"
            DockPanel.Dock="Right"
            Orientation="Vertical">
            <StackPanel
                Margin="10"
                HorizontalAlignment="Center"
                Orientation="Horizontal">

                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="16"
                    Foreground="White"
                    Text="PixelSort" />
            </StackPanel>

            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <TextBlock
                    Margin="5,5,0,5"
                    FontSize="14"
                    Text="Dimensions: "
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
                <TextBlock
                    Margin="0,5,5,5"
                    FontSize="14"
                    FontWeight="Bold"
                    Text="{Binding PixelDimensions}"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />

            </StackPanel>

            <ComboBox
                Name="SortComboBox"
                Width="120"
                Margin="10"
                IsSynchronizedWithCurrentItem="True"
                ItemsSource="{Binding SortingMethods}"
                SelectedItem="{Binding SelectedSort}" />


            <StackPanel MaxWidth="300" Orientation="Vertical">

                <Border Margin="5">
                    <Grid>
                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">

                            <StackPanel Orientation="Vertical">

                                <TextBlock Text="Vertical Partitions" />
                                <local:NumericTextBox Margin="10" Text="{Binding VerticalPartitions, Mode=TwoWay}" />
                            </StackPanel>

                            <StackPanel Orientation="Vertical">

                                <TextBlock Text="Horizontal Partitions" />

                                <local:NumericTextBox Margin="10" Text="{Binding HorizontalPartitions, Mode=TwoWay}" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>

            <StackPanel MaxWidth="300">
                <Border Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <StackPanel
                            Grid.Row="0"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="5,5,0,5"
                                Text="Please Enter Bounds Between: "
                                TextAlignment="Center"
                                TextWrapping="Wrap" />
                            <TextBlock
                                Margin="0,5,5,5"
                                FontWeight="Bold"
                                Text="{Binding BoundText}"
                                TextAlignment="Center"
                                TextWrapping="Wrap" />

                        </StackPanel>
                        <StackPanel
                            Grid.Row="1"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">

                            <StackPanel Orientation="Vertical">

                                <TextBlock Text="Lower Bound" />
                                <local:NumericTextBox Margin="10" Text="{Binding LowerBound, Mode=TwoWay}" />
                            </StackPanel>

                            <StackPanel Orientation="Vertical">

                                <TextBlock Text="Upper Bound" />

                                <local:NumericTextBox Margin="10" Text="{Binding UpperBound, Mode=TwoWay}" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

            </StackPanel>

            <StackPanel MaxWidth="300" Visibility="{Binding RGBOptions}">
                <Border Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <StackPanel
                            Grid.Row="0"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="5,5,0,5"
                                Text="Sort By: "
                                TextAlignment="Center"
                                TextWrapping="Wrap" />
                            <TextBlock
                                Margin="0,5,5,5"
                                FontWeight="Bold"
                                Text="{Binding ColorText}"
                                TextAlignment="Center"
                                TextWrapping="Wrap" />

                        </StackPanel>
                        <StackPanel
                            Grid.Row="1"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">

                            <Button
                                x:Name="Red"
                                Width="80px"
                                Margin="5,10"
                                Command="{Binding RedChecked}"
                                Content="Red" />
                            <Button
                                x:Name="Blue"
                                Width="80px"
                                Margin="5,10"
                                Command="{Binding BlueChecked}"
                                Content="Blue" />

                            <Button
                                x:Name="Green"
                                Width="80px"
                                Margin="5,10"
                                Command="{Binding GreenChecked}"
                                Content="Green" />
                        </StackPanel>
                    </Grid>
                </Border>

            </StackPanel>

            <StackPanel MaxWidth="300">
                <Border Margin="5" Visibility="Collapsed">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="{Binding RotationText}" />
                        <Slider
                            x:Name="Rotationslider"
                            Grid.Row="1"
                            Width="180"
                            Margin="10"
                            IsMoveToPointEnabled="True"
                            IsSnapToTickEnabled="True"
                            Maximum="90"
                            Minimum="0"
                            TickFrequency="90"
                            Value="{Binding RotationValue}" />
                    </Grid>
                </Border>
                <Border Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <StackPanel
                            Grid.Row="0"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="5,5,0,5"
                                Text="Additional Options: "
                                TextAlignment="Center"
                                TextWrapping="Wrap" />
                            <TextBlock
                                Margin="0,5,5,5"
                                FontWeight="Bold"
                                Text="{Binding AddOpsText}"
                                TextAlignment="Center"
                                TextWrapping="Wrap" />
                        </StackPanel>
                        <StackPanel
                            Grid.Row="1"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">

                            <Button
                                x:Name="Extend"
                                Width="80px"
                                Margin="5,10"
                                Command="{Binding ExtendChecked}"
                                Content="Extend" />
                            <Button
                                x:Name="Spiral"
                                Width="80px"
                                Margin="5,10"
                                Command="{Binding SpiralChecked}"
                                Content="Spiral" />
                            <Button
                                x:Name="None"
                                Width="80px"
                                Margin="5,10"
                                Command="{Binding NoneChecked}"
                                Content="None" />
                        </StackPanel>
                    </Grid>
                </Border>
                <Grid Margin="5">
                    <Border>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <StackPanel
                                Grid.Row="0"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
                                <TextBlock
                                    Margin="5,5,0,5"
                                    Text="Sort Direction: "
                                    TextAlignment="Center"
                                    TextWrapping="Wrap" />
                                <TextBlock
                                    Margin="0,5,5,5"
                                    FontWeight="Bold"
                                    Text="{Binding DirectionText}"
                                    TextAlignment="Center"
                                    TextWrapping="Wrap" />
                            </StackPanel>
                            <StackPanel
                                Grid.Row="1"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">

                                <Button
                                    Width="48"
                                    Height="48"
                                    Margin="5,10"
                                    Command="{Binding RightChecked}">
                                    <Image Source="/Images/right.png" />
                                </Button>
                                <Button
                                    Width="48"
                                    Height="48"
                                    Margin="5,10"
                                    Command="{Binding DownChecked}">
                                    <Image Source="/Images/down.png" />
                                </Button>
                                <Button
                                    Width="48"
                                    Height="48"
                                    Margin="5,10"
                                    Command="{Binding LeftChecked}">
                                    <Image Source="/Images/left.png" />
                                </Button>
                                <Button
                                    Width="48"
                                    Height="48"
                                    Margin="5,10"
                                    Command="{Binding UpChecked}">
                                    <Image Source="/Images/up.png" />
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

            </StackPanel>
            <Button
                x:Name="Process"
                Width="120"
                Margin="10"
                VerticalAlignment="Bottom"
                Command="{Binding ProcessImage}"
                Content="Begin Processing"
                IsEnabled="{Binding ProcessEnabled}" />
        </StackPanel>

    </DockPanel>
</UserControl>