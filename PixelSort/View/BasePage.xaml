<UserControl x:Class="PixelSort.View.BasePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PixelSort.View"
             mc:Ignorable="d"
             d:DesignHeight="900"
             d:DesignWidth="1600"
             Background="#282829">
    <DockPanel>
        <StackPanel
            Margin="20"
            DockPanel.Dock="Left"
            Orientation="Vertical"
            HorizontalAlignment="Center"
            Visibility="{Binding VerticalPanelVisibility}">

            <Image 
                Source="{Binding ImagePath}"
                Height="350"
                Width="1100" />
            <Button 
                Name="LoadImageV"
                Margin="10px"
                Content="Load Image"
                Command="{Binding LoadImageClick}"
                Width="80px" />
            <Button 
                x:Name="OrientationV"
                Command="{Binding SwitchOrientation}"
                Width="80px"
                Margin="10px"
                Content="Switch" />

            <Image 
                Source="{Binding SortedImage, Mode=TwoWay}"
                Height="350"
                Width="1100" />

            <Button 
                Name="SaveImageV"
                Margin='10px'
                Content="Save Image"
                Command="{Binding SaveImage}"
                IsEnabled="{Binding SaveEnabled}"
                Width="80px" />
        </StackPanel>
        <!--
        <StackPanel
            Margin="20"
